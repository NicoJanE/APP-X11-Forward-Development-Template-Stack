{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean: All Build Output",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/projectfile.csproj",    // Path and fixed project file(change of project file is update here)
                "/t:Clean"
            ],
            "problemMatcher": [],
            "detail": "  - Clean build output directories"
        },
        {
            "label": "Debug: Restores NuGet Packages",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "${workspaceFolder}/projectfile.csproj",    // Path and fixed project file(change of project file is update here)
                //"--configfile",  // Use this if you have a custom NuGet.Config
                //"${workspaceFolder}/NuGet.Config",
                "/p:BaseIntermediateOutputPath=${workspaceFolder}/bin/Debug/obj/"
            ],
            "problemMatcher": [],
            "detail": "  - Restore the required NuGet packages for Debug Build configuration"
        },
        {
            "label": "Debug: Build Configuration",
            "type": "shell",
            "dependsOn": "Clean Build Output",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/projectfile.csproj",    // Path and fixed project file(change of project file is update here)
                "/t:Build",
                "/p:Configuration=Debug",
                "/p:Platform=AnyCPU",
                "/p:OutDir=${workspaceFolder}/bin/Debug/",
                "/p:BaseIntermediateOutputPath=${workspaceFolder}/bin/Debug/obj/"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "detail": " - Build WPF project in Debug mode"
        },
        {
            "label": "Release: Restore NuGet Packages for",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "${workspaceFolder}/projectfile.csproj",    // Path and fixed project file(change of project file is update here)
                //"--configfile",  // Use this if you have a custom NuGet.Config
                //"${workspaceFolder}/NuGet.Config",
                "/p:BaseIntermediateOutputPath=${workspaceFolder}/bin/Release/obj/"
            ],
            "problemMatcher": [],
            "detail": "  - Restore the NuGet packages for Release Build configuration"
        },
        {
            "label": "Release: Build Configuration",
            "type": "shell",
            "dependsOn": "Clean Build Output",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/projectfile.csproj",    // Path and fixed project file(change of project file is update here)
                "/t:Build",
                "/p:Configuration=Release",
                "/p:Platform=AnyCPU",
                "/p:OutDir=${workspaceFolder}/bin/Release/",
                "/p:BaseIntermediateOutputPath=${workspaceFolder}/bin/Release/obj/"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "detail": "  - Build WPF project in Release mode"
        }
    ]
}
